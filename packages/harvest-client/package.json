{
	"name": "harvest-client",
	"version": "1.0.0",
	"private": true,
	"description": "Type-safe TypeScript client for Harvest API v2 (internal package)",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./types": {
			"types": "./dist/types/harvest.d.ts"
		}
	},
	"files": ["dist", "src/openapi"],
	"scripts": {
		"build": "pnpm run generate:types && tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf dist",
		"generate:types": "openapi-typescript ./src/openapi/harvest-v2.yaml -o ./src/types/harvest.d.ts",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"openapi-fetch": "^0.13.3"
	},
	"devDependencies": {
		"eslint": "^9.16.0",
		"eslint-config": "workspace:*",
		"openapi-typescript": "^7.4.4",
		"typescript": "^5.7.2",
		"typescript-config": "workspace:*"
	}
}
